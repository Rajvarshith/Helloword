pipeline{
    agent any
    
    environment{
         PATH = "/opt/maven3/bin:$PATH"
          
    }
    stages{
        stage("Git Checkout"){
            steps{
                
                git branch: 'main', credentialsId: 'Javahome2', url: 'https://github.com/Rajvarshith/Helloword.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/webapp.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                
            }
            
            }
        }
    }
}
